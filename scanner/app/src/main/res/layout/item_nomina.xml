<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeColor="#43E9E8"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="#1e2147">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivActividadIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_agenda"
            android:background="@drawable/icon_circle_background"
            android:padding="10dp"
            android:tint="#43E9E8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Nombre de la actividad -->
        <TextView
            android:id="@+id/tvActividad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="AlbaÃ±il"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@id/ivActividadIcon"
            app:layout_constraintEnd_toStartOf="@id/tvEstado"
            app:layout_constraintTop_toTopOf="@id/ivActividadIcon" />

        <TextView
            android:id="@+id/tvEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACTIVO"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="#43E9E8"
            android:background="@drawable/badge_background"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivActividadIcon" />

        <!-- Tipo de ingreso -->
        <TextView
            android:id="@+id/tvTipoIngreso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="INNCOME"
            android:textSize="13sp"
            android:textColor="#AAAAAA"
            app:layout_constraintStart_toEndOf="@id/ivActividadIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvActividad" />

        <TextView
            android:id="@+id/tvCantidadIngresos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:text="5 ingresos registrados"
            android:textSize="12sp"
            android:textColor="#666666"
            app:layout_constraintStart_toEndOf="@id/ivActividadIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTipoIngreso"
            app:layout_constraintBottom_toBottomOf="@id/ivActividadIcon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dniDrawer"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1a1f4d"
    android:padding="16dp"
    android:elevation="16dp">

    <TextView
        android:id="@+id/tvDrawerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresar DNI"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp" />

    <EditText
        android:id="@+id/etDniInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:hint="Ej: 12345678"
        android:textColor="#FFFFFF"
        android:textColorHint="#888888"
        android:textSize="18sp"
        android:gravity="center"
        android:maxLength="8"
        android:focusable="false"/>

    <!-- Teclado numérico personalizado -->
    <GridLayout
        android:id="@+id/numericKeyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4"
        android:layout_marginTop="16dp">

        <!-- Números 1-9 -->
        <Button android:text="1" style="@style/KeyButton"/>
        <Button android:text="2" style="@style/KeyButton"/>
        <Button android:text="3" style="@style/KeyButton"/>
        <Button android:text="4" style="@style/KeyButton"/>
        <Button android:text="5" style="@style/KeyButton"/>
        <Button android:text="6" style="@style/KeyButton"/>
        <Button android:text="7" style="@style/KeyButton"/>
        <Button android:text="8" style="@style/KeyButton"/>
        <Button android:text="9" style="@style/KeyButton"/>
        <!-- Vacío / Borrar -->
        <Button android:text="⌫" style="@style/KeyButton"/>
        <Button android:text="0" style="@style/KeyButton"/>
        <Button android:text="✔" style="@style/KeyButton"/>
    </GridLayout>

</LinearLayout>
